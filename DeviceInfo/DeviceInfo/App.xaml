<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DeviceInfo.App">
    <Application.Resources>
        <!--Page's color-->
        <Style TargetType="Page" ApplyToDerivedTypes="True">
            <Setter Property="BackgroundColor" Value="{AppThemeBinding Dark=#000, Light=#FFF}" />
        </Style>
        <Style TargetType="Label" ApplyToDerivedTypes="True">
            <Setter Property="TextColor" Value="{AppThemeBinding Dark=#e8e8e8, Light=#202124}" />
        </Style>
        
        <!--Tab bar's color-->
        <Style TargetType="TabbedPage" ApplyToDerivedTypes="True">
            <Setter Property="BackgroundColor" Value="{AppThemeBinding Dark=#121212, Light=#F7F7F7}" />
        </Style>

        <Style TargetType="NavigationPage" ApplyToDerivedTypes="True">
            <Setter Property="BarBackgroundColor" Value="{AppThemeBinding Dark=#121212, Light=#F7F7F7}" />
        </Style>
     </Application.Resources>
</Application>